using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Test28 : MonoBehaviour
{
    // 다음과 같이 출력하는 함수를 완성해보세요.
    // ★★★★★
    // ☆★★★★
    // ☆☆★★★
    // ☆☆☆★★
    // ☆☆☆☆★

    string sequence = "";

    void Start()
    {
        for (int i = 0; i < 5; i++)
        {
            for (int y = 0; y < i; y++)
            {
                sequence += "☆";
            }

            for (int x = 0; x < 5 - i; x++)
            {
                sequence += "★";
            }

            print(sequence);
            sequence = "";
        }
    }
}
